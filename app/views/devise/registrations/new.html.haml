= bootstrap_devise_error_messages!
.panel.panel-default
  .panel-heading
    %h4= t('.sign_up', :default => "Sign up")
  .panel-body
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f|
      .form-group
        = f.label :name
        = f.text_field :name, class: "form-control", placeholder: t('.name')
      = f.fields_for :owned_accounts, resource.owned_accounts.first || resource.owned_accounts.build do |a|
        .form_group
          = a.label :name
          = a.text_field :name, class: "form-control", placeholder: t('.account_name')
      .form-group
        = f.label :email
        = f.email_field :email, class: "form-control"
      .form-group
        = f.label :password
        = f.password_field :password, class: "form-control"
      = f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary"
      или
      = link_to t('.sign_in', :default => "Вход"), new_user_session_path, class: "btn btn-default"
= render "devise/shared/links"